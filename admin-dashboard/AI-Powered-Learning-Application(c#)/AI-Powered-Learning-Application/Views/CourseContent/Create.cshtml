@model AI_Powered_Learning_Application.Models.ViewModels.CourseContentFormViewModel

<h2>Upload Course Content</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" id="contentForm">
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ContentType"></label>
        <select asp-for="ContentType" class="form-control" id="contentTypeSelect">
            <option value="">-- Select --</option>
            <option value="PDF">PDF</option>
            <option value="Video">Video</option>
            <option value="Link">Link</option>
        </select>
        <span asp-validation-for="ContentType" class="text-danger"></span>
    </div>

    <div class="form-group" id="fileUploadGroup">
        <label>Files</label>
        <input asp-for="ContentFiles" type="file" multiple class="form-control-file" />
        <span asp-validation-for="ContentFiles" class="text-danger"></span>
    </div>

    <div class="form-group" id="urlGroup" style="display:none;">
        <label>URL</label>
        <input asp-for="ContentUrl" class="form-control" />
        <span asp-validation-for="ContentUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Toggle fields based on content type
            $('#contentTypeSelect').change(function() {
                const isLink = $(this).val() === 'Link';
                $('#fileUploadGroup').toggle(!isLink);
                $('#urlGroup').toggle(isLink);
            }).trigger('change'); // Initialize on page load
        });
    </script>
}