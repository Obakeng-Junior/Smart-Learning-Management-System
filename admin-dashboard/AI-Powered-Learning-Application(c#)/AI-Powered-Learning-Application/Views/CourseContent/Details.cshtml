@model AI_Powered_Learning_Application.Models.ViewModels.CourseContentDetailsViewModel
@inject AI_Powered_Learning_Application.Services.IFirebaseStorageService FirebaseStorageService

<h2>@Model.Content.Title</h2>
<p>@Model.Content.Description</p>
<p><strong>Type:</strong> @Model.Content.ContentType</p>

@if (Model.Content.ContentUrls != null && Model.Content.ContentUrls.Any())
{
    <h4>Content Files/Links</h4>
    <div class="content-container">
        @foreach (var url in Model.Content.ContentUrls)
        {
            <div class="content-item mb-4 p-3 border rounded">
                @if (url.Contains("youtube.com") || url.Contains("youtu.be"))
                {
                    <div class="video-container">
                        <h5><i class="fab fa-youtube text-danger"></i> YouTube Video</h5>
                        <div class="embed-responsive embed-responsive-16by9" style="max-width: 560px;">
                            <iframe class="embed-responsive-item"
                                    src="https://www.youtube.com/embed/@(ExtractYouTubeId(url))"
                                    allowfullscreen>
                            </iframe>
                        </div>
                    </div>
                }
                else if (IsPdfUrl(url))
                {
                    <div class="pdf-container">
                        <h5><i class="fas fa-file-pdf text-danger"></i> PDF Document</h5>
                        <div class="pdf-actions mb-3">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-success"
                                        onclick="loadPdfJsViewer('@Model.Content.Id', '@GetPdfUrl(url)')">
                                    <i class="fas fa-eye"></i> Preview PDF
                                </button>
                                <a href="@GetPdfUrl(url)" target="_blank" class="btn btn-outline-primary">
                                    <i class="fas fa-external-link-alt"></i> Open in New Tab
                                </a>
                                <a href="@GetPdfUrl(url)" download class="btn btn-outline-info">
                                    <i class="fas fa-download"></i> Download
                                </a>
                            </div>
                        </div>

                        <!-- PDF.js Viewer Container -->
                        <div id="pdfjs-viewer-@Model.Content.Id" class="embedded-pdf-viewer mt-3" style="display: none;">
                            <div class="pdfjs-controls mb-2">
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button" class="btn btn-outline-secondary" onclick="changePage('@Model.Content.Id', -1)">
                                        <i class="fas fa-chevron-left"></i> Prev
                                    </button>
                                    <span class="btn btn-outline-dark page-info">Page: <span id="page-num-@Model.Content.Id">1</span> / <span id="page-count-@Model.Content.Id">0</span></span>
                                    <button type="button" class="btn btn-outline-secondary" onclick="changePage('@Model.Content.Id', 1)">
                                        <i class="fas fa-chevron-right"></i> Next
                                    </button>
                                    <button type="button" class="btn btn-outline-info" onclick="changeZoom('@Model.Content.Id', 0.2)">
                                        <i class="fas fa-search-plus"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-info" onclick="changeZoom('@Model.Content.Id', -0.2)">
                                        <i class="fas fa-search-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-warning" onclick="resetZoom('@Model.Content.Id')">
                                        <i class="fas fa-sync-alt"></i> Reset
                                    </button>
                                    <button type="button" class="btn btn-outline-danger" onclick="closePdfViewer('@Model.Content.Id')">
                                        <i class="fas fa-times"></i> Close
                                    </button>
                                </div>
                            </div>
                            <div class="pdf-loading alert alert-info alert-sm mb-2">
                                <i class="fas fa-spinner fa-spin"></i> Loading PDF...
                            </div>
                            <div class="pdf-canvas-container" style="text-align: center;">
                                <canvas id="pdf-canvas-@Model.Content.Id" style="display: none; border: 1px solid #ddd; max-width: 100%;"></canvas>
                            </div>
                            <div class="pdf-error alert alert-danger mt-2" style="display: none;">
                                <p><i class="fas fa-exclamation-triangle"></i> Failed to load PDF. Please try opening in a new tab or downloading instead.</p>
                            </div>
                        </div>
                    </div>
                }
                else if (url.EndsWith(".mp4") || url.EndsWith(".mov") || url.EndsWith(".avi"))
                {
                    <div class="video-container">
                        <h5><i class="fas fa-video text-primary"></i> Video File</h5>
                        <video controls width="100%" style="max-width: 600px;" class="bg-dark rounded">
                            <source src="@url" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                }
                else if (url.Contains("cloudinary.com") && (url.Contains(".jpg") || url.Contains(".jpeg") || url.Contains(".png") || url.Contains(".gif")))
                {
                    <div class="image-container">
                        <h5><i class="fas fa-image text-success"></i> Image</h5>
                        <img src="@url" alt="Content Image" style="max-width: 100%; height: auto; max-height: 400px;" class="img-thumbnail" />
                    </div>
                }
                else
                {
                    <div class="link-container">
                        <h5><i class="fas fa-link text-info"></i> External Link</h5>
                        <a href="@url" target="_blank" class="btn btn-outline-secondary">
                            <i class="fas fa-external-link-alt"></i> Visit Link: @(url.Length > 50 ? url.Substring(0, 50) + "..." : url)
                        </a>
                    </div>
                }
            </div>
        }
    </div>
}

<hr />
<h3><i class="fas fa-question-circle"></i> Quizzes</h3>

@if (Model.Quizzes.Any())
{
    <div class="quizzes-container">
        @foreach (var quiz in Model.Quizzes)
        {
            <div class="quiz-item card mb-4">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">@quiz.Question</h6>
                </div>
                <div class="card-body">
                    <!-- Quiz Options -->
                    <div class="quiz-options mb-3">
                        @if (!string.IsNullOrEmpty(quiz.OptionA))
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="quiz-@quiz.Id" id="optionA-@quiz.Id" disabled>
                                <label class="form-check-label" for="optionA-@quiz.Id">
                                    <strong>A:</strong> @quiz.OptionA
                                    @if (quiz.CorrectAnswer == "A")
                                    {
                                        <span class="badge bg-success ms-2"><i class="fas fa-check"></i> Correct</span>
                                    }
                                </label>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(quiz.OptionB))
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="quiz-@quiz.Id" id="optionB-@quiz.Id" disabled>
                                <label class="form-check-label" for="optionB-@quiz.Id">
                                    <strong>B:</strong> @quiz.OptionB
                                    @if (quiz.CorrectAnswer == "B")
                                    {
                                        <span class="badge bg-success ms-2"><i class="fas fa-check"></i> Correct</span>
                                    }
                                </label>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(quiz.OptionC))
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="quiz-@quiz.Id" id="optionC-@quiz.Id" disabled>
                                <label class="form-check-label" for="optionC-@quiz.Id">
                                    <strong>C:</strong> @quiz.OptionC
                                    @if (quiz.CorrectAnswer == "C")
                                    {
                                        <span class="badge bg-success ms-2"><i class="fas fa-check"></i> Correct</span>
                                    }
                                </label>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(quiz.OptionD))
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="quiz-@quiz.Id" id="optionD-@quiz.Id" disabled>
                                <label class="form-check-label" for="optionD-@quiz.Id">
                                    <strong>D:</strong> @quiz.OptionD
                                    @if (quiz.CorrectAnswer == "D")
                                    {
                                        <span class="badge bg-success ms-2"><i class="fas fa-check"></i> Correct</span>
                                    }
                                </label>
                            </div>
                        }
                    </div>

                    <!-- Quiz Metadata - Only show creation date -->
                    <div class="quiz-meta">
                        <small class="text-muted">
                            <i class="fas fa-calendar-alt"></i> Created: @quiz.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No quizzes available for this content yet.
    </div>
}

