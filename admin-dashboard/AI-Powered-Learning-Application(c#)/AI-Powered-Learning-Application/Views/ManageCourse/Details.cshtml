@model AI_Powered_Learning_Application.Models.ViewModels.CourseDetailsViewModel
@inject AI_Powered_Learning_Application.Services.IFirebaseStorageService FirebaseStorageService

<h2>@Model.Course.Title</h2>

<div class="course-info">
    <img src="@Model.Course.ImageUrl" alt="Course Image" style="max-width: 300px; border-radius: 8px;" class="img-fluid mb-3" />

    <div class="course-meta mb-4">
        <p><strong>Category:</strong> @Model.Course.Category</p>
        <p><strong>Difficulty:</strong> @Model.Course.Difficulty</p>
        <p><strong>Description:</strong> @Model.Course.Description</p>
    </div>

    <div class="course-actions mb-4">
        <a asp-controller="CourseContent" asp-action="Create" asp-route-courseId="@Model.Course.Id" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Content
        </a>
        <a asp-controller="ManageCourse" asp-action="Edit" asp-route-id="@Model.Course.Id" class="btn btn-secondary">
            <i class="fas fa-edit"></i> Edit Course
        </a>
    </div>
</div>

<hr />

<h4>Course Content</h4>

@if (Model.Contents.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Content</th>
                    <th>Uploaded</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var content in Model.Contents)
                {
                    <tr>
                        <td>@content.Title</td>
                        <td>@content.ContentType</td>
                        <td>
                            @if (content.ContentUrls.Any())
                            {
                                <div class="content-preview-container">
                                    @foreach (var url in content.ContentUrls)
                                    {
                                        <div class="content-preview mb-2">
                                            @if (url.Contains("youtube.com") || url.Contains("youtu.be"))
                                            {
                                                <div class="embed-responsive embed-responsive-16by9" style="max-width: 300px;">
                                                    <iframe class="embed-responsive-item"
                                                            src="https://www.youtube.com/embed/@(ExtractYouTubeId(url))"
                                                            allowfullscreen></iframe>
                                                </div>
                                            }
                                            else if (IsPdfUrl(url))
                                            {
                                                <div class="pdf-viewer-container">
                                                    <i class="fas fa-file-pdf fa-2x text-danger"></i>
                                                    <span class="storage-badge @(GetStorageBadgeClass(url))">
                                                        @GetStorageProvider(url)
                                                    </span>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <button type="button" class="btn btn-outline-success"
                                                                onclick="loadPdfJsViewer('@content.Id', '@GetPdfUrl(url)')">
                                                            <i class="fas fa-eye"></i> View PDF
                                                        </button>
                                                        <a href="@Url.Action("ViewPdf", "ManageCourse", new { url = url })" target="_blank" class="btn btn-outline-primary">
                                                            <i class="fas fa-download"></i> Download
                                                        </a>
                                                    </div>

                                                    <!-- PDF.js Viewer Container -->
                                                    <div id="pdfjs-viewer-@content.Id" class="embedded-pdf-viewer mt-2" style="display: none;">
                                                        <div class="pdfjs-controls mb-2">
                                                            <div class="btn-group btn-group-sm" role="group">
                                                                <button type="button" class="btn btn-outline-secondary" onclick="changePage('@content.Id', -1)">
                                                                    <i class="fas fa-chevron-left"></i> Prev
                                                                </button>
                                                                <span class="btn btn-outline-dark page-info">Page: <span id="page-num-@content.Id">1</span> / <span id="page-count-@content.Id">0</span></span>
                                                                <button type="button" class="btn btn-outline-secondary" onclick="changePage('@content.Id', 1)">
                                                                    <i class="fas fa-chevron-right"></i> Next
                                                                </button>
                                                                <button type="button" class="btn btn-outline-info" onclick="changeZoom('@content.Id', 0.2)">
                                                                    <i class="fas fa-search-plus"></i>
                                                                </button>
                                                                <button type="button" class="btn btn-outline-info" onclick="changeZoom('@content.Id', -0.2)">
                                                                    <i class="fas fa-search-minus"></i>
                                                                </button>
                                                                <button type="button" class="btn btn-outline-warning" onclick="resetZoom('@content.Id')">
                                                                    <i class="fas fa-sync-alt"></i> Reset
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <div class="pdf-loading alert alert-info alert-sm mb-2">
                                                            <i class="fas fa-spinner fa-spin"></i> Loading PDF...
                                                        </div>
                                                        <div class="pdf-canvas-container" style="text-align: center;">
                                                            <canvas id="pdf-canvas-@content.Id" style="display: none; border: 1px solid #ddd; max-width: 100%;"></canvas>
                                                        </div>
                                                        <div class="pdf-error alert alert-danger mt-2" style="display: none;">
                                                            <p><i class="fas fa-exclamation-triangle"></i> Failed to load PDF. Please try downloading the file instead.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else if (url.EndsWith(".mp4") || url.EndsWith(".mov") || url.EndsWith(".avi"))
                                            {
                                                <video controls width="200" class="bg-dark">
                                                    <source src="@url" type="video/mp4">
                                                    Your browser does not support the video tag.
                                                </video>
                                            }
                                            else
                                            {
                                                <a href="@url" target="_blank">View Content</a>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </td>
                        <td>@content.UploadedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="CourseContent" asp-action="Edit"
                                   asp-route-courseId="@Model.Course.Id"
                                   asp-route-contentId="@content.Id"
                                   class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="CourseContent" asp-action="Details"
                                   asp-route-courseId="@Model.Course.Id"
                                   asp-route-contentId="@content.Id"
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>

                                <form asp-controller="CourseContent" asp-action="Delete"
                                      asp-route-courseId="@Model.Course.Id"
                                      asp-route-contentId="@content.Id"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this content?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        No content added for this course yet. Click "Add Content" to get started.
    </div>
}
<a asp-controller="ManageCourse" asp-action="Index" asp-route-courseId="@Model.Course.Id" 
   class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Back to Course
</a>

