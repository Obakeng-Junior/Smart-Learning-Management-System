@section Scripts {
    <!-- Include PDF.js from CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"></script>

    <script>
        // Set PDF.js worker path
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.worker.min.js';

        // Store PDF instances per content
        const pdfStates = {};

        function loadPdfJsViewer(contentId, pdfUrl) {
            const viewer = document.getElementById('pdfjs-viewer-' + contentId);
            const canvas = document.getElementById('pdf-canvas-' + contentId);
            const loading = viewer.querySelector('.pdf-loading');
            const errorDiv = viewer.querySelector('.pdf-error');

            if (viewer.style.display === 'none') {
                // Show viewer
                viewer.style.display = 'block';
                loading.style.display = 'block';
                errorDiv.style.display = 'none';
                canvas.style.display = 'none';

                // Initialize state for this PDF
                if (!pdfStates[contentId]) {
                    pdfStates[contentId] = {
                        pdfDoc: null,
                        pageNum: 1,
                        pageRendering: false,
                        pageNumPending: null,
                        scale: 1.0
                    };
                }

                const state = pdfStates[contentId];

                // Load the PDF
                pdfjsLib.getDocument(pdfUrl).promise.then(function(pdf) {
                    state.pdfDoc = pdf;
                    document.getElementById('page-count-' + contentId).textContent = pdf.numPages;
                    state.pageNum = 1;
                    renderPage(contentId, state.pageNum);
                }).catch(function(error) {
                    loading.style.display = 'none';
                    errorDiv.style.display = 'block';
                    console.error('Error loading PDF:', error);

                    // If PDF.js fails, try opening in new tab as fallback
                    setTimeout(() => {
                        window.open(pdfUrl, '_blank');
                    }, 2000);
                });

                viewer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            } else {
                // Hide viewer
                viewer.style.display = 'none';
            }
        }

        function renderPage(contentId, num) {
            const state = pdfStates[contentId];
            if (!state || !state.pdfDoc) return;

            state.pageRendering = true;
            const canvas = document.getElementById('pdf-canvas-' + contentId);
            const loading = document.querySelector('#pdfjs-viewer-' + contentId + ' .pdf-loading');

            state.pdfDoc.getPage(num).then(function(page) {
                const viewport = page.getViewport({ scale: state.scale });
                canvas.height = viewport.height;
                canvas.width = viewport.width;

                const renderContext = {
                    canvasContext: canvas.getContext('2d'),
                    viewport: viewport
                };

                const renderTask = page.render(renderContext);

                renderTask.promise.then(function() {
                    state.pageRendering = false;
                    loading.style.display = 'none';
                    canvas.style.display = 'block';
                    document.getElementById('page-num-' + contentId).textContent = num;

                    if (state.pageNumPending !== null) {
                        renderPage(contentId, state.pageNumPending);
                        state.pageNumPending = null;
                    }
                });
            }).catch(function(error) {
                loading.style.display = 'none';
                const errorDiv = document.querySelector('#pdfjs-viewer-' + contentId + ' .pdf-error');
                errorDiv.style.display = 'block';
                console.error('Error rendering page:', error);
            });
        }

        function changePage(contentId, offset) {
            const state = pdfStates[contentId];
            if (!state || !state.pdfDoc) return;

            const newPage = state.pageNum + offset;
            if (newPage >= 1 && newPage <= state.pdfDoc.numPages) {
                state.pageNum = newPage;
                if (state.pageRendering) {
                    state.pageNumPending = state.pageNum;
                } else {
                    renderPage(contentId, state.pageNum);
                }
            }
        }

        function changeZoom(contentId, delta) {
            const state = pdfStates[contentId];
            if (!state || !state.pdfDoc) return;

            state.scale += delta;
            state.scale = Math.max(0.5, Math.min(3, state.scale)); // Limit zoom between 0.5x and 3x
            if (!state.pageRendering) {
                renderPage(contentId, state.pageNum);
            }
        }

        function resetZoom(contentId) {
            const state = pdfStates[contentId];
            if (!state || !state.pdfDoc) return;

            state.scale = 1.0;
            if (!state.pageRendering) {
                renderPage(contentId, state.pageNum);
            }
        }
    </script>
}

@functions {
    public string ExtractYouTubeId(string url)
    {
        var regExp = new System.Text.RegularExpressions.Regex(@"^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*");
        var match = regExp.Match(url);
        return (match.Success && match.Groups[2].Length == 11) ? match.Groups[2].Value : null;
    }

    public string GetPdfUrl(string url)
    {
        // Use proxy for PDF.js viewer to avoid CORS issues
        return Url.Action("ViewPdf", "ManageCourse", new { url = url });
    }

    public string GetStorageProvider(string url)
    {
        if (url.Contains("firebasestorage.googleapis.com") || url.Contains("firebasestorage.app"))
            return "Firebase";
        else if (url.Contains("cloudinary.com"))
            return "Cloudinary";
        else
            return "External";
    }

    public string GetStorageBadgeClass(string url)
    {
        if (url.Contains("firebasestorage.googleapis.com") || url.Contains("firebasestorage.app"))
            return "badge-firebase";
        else if (url.Contains("cloudinary.com"))
            return "badge-cloudinary";
        else
            return "badge-other";
    }

    // Improved PDF detection that handles Firebase Storage URLs
    public bool IsPdfUrl(string url)
    {
        if (string.IsNullOrEmpty(url)) return false;

        // Check if URL explicitly ends with .pdf
        if (url.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
            return true;

        // Check Firebase Storage URLs that contain PDFs
        if ((url.Contains("firebasestorage.googleapis.com") || url.Contains("firebasestorage.app")) &&
            (url.Contains("/pdfs/") || url.Contains("%2Fpdfs%2F") || url.Contains(".pdf")))
            return true;

        // Check Cloudinary PDF URLs
        if (url.Contains("cloudinary.com") && url.Contains(".pdf"))
            return true;

        return false;
    }
}