@using AI_Powered_Learning_Application.Models.ViewModels
@model List<StudentViewModel>

@{
    ViewData["Title"] = "Manage Students";
    var hasSearchTerm = !string.IsNullOrEmpty(ViewBag.SearchTerm);
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h3 mb-2" style="color: #1e3a8a; font-weight: 600;">Student Management</h1>
            <p class="mb-0" style="color: #6b7280;">Manage and monitor all student accounts</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-primary" style="background: linear-gradient(135deg, #2563eb, #1d4ed8); border: none; padding: 12px 24px; font-weight: 600;">
            <i class="fas fa-user-plus me-2"></i>Add New Student
        </a>
    </div>

    <!-- Stats Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #1e40af, #3730a3);">
                <div class="card-body py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title mb-0 text-white" style="font-weight: 600;">
                                <i class="fas fa-users me-2"></i>Total Students
                            </h5>
                        </div>
                        <div class="col-auto">
                            <h2 class="mb-0 text-white" style="font-weight: 700;">@Model.Count</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <form asp-action="Index" method="get" class="mb-0">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-start-0 ps-0"
                                   name="searchTerm" value="@ViewBag.SearchTerm"
                                   placeholder="Search by name, email, or status..."
                                   style="border-color: #e5e7eb;">
                            <!-- Search Button -->
                            <button class="btn btn-primary" type="submit"
                                    style="background: #2563eb; border-color: #2563eb; @(hasSearchTerm ? "border-radius: 0;" : "border-radius: 0 8px 8px 0;")">
                                <i class="fas fa-search me-1"></i>Search
                            </button>
                            <!-- Clear Search Button (Visible when there's a search term) -->
                            @if (hasSearchTerm)
                            {
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary"
                                   style="border-radius: 0 8px 8px 0; border-left: 1px solid #dee2e6;">
                                    <i class="fas fa-times me-1"></i>Clear
                                </a>
                            }
                        </div>
                    </form>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2"
                          style="font-size: 0.9rem; border: 1px solid #dbeafe;">
                        <i class="fas fa-filter me-1"></i>Showing @Model.Count students
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@TempData["ErrorMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Students Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 border-bottom" style="border-color: #e5e7eb !important;">
            <h5 class="card-title mb-0" style="color: #1e3a8a; font-weight: 600;">
                <i class="fas fa-list me-2"></i>Students List
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background: #f8fafc;">
                        <tr>
                            <th class="border-0 ps-4" style="color: #374151; font-weight: 600; font-size: 0.875rem;">
                                STUDENT
                            </th>
                            <th class="border-0" style="color: #374151; font-weight: 600; font-size: 0.875rem;">
                                CONTACT
                            </th>
                            <th class="border-0" style="color: #374151; font-weight: 600; font-size: 0.875rem;">
                                REGISTERED
                            </th>
                            <th class="border-0" style="color: #374151; font-weight: 600; font-size: 0.875rem;">
                                STATUS
                            </th>
                            <th class="border-0" style="color: #374151; font-weight: 600; font-size: 0.875rem;">
                                COURSES
                            </th>
                            <th class="border-0 pe-4 text-end" style="color: #374151; font-weight: 600; font-size: 0.875rem;">
                                ACTIONS
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr style="border-color: #f1f5f9;">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3"
                                             style="width: 40px; height: 40px; background: linear-gradient(135deg, #3b82f6, #1d4ed8);
                                                            border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                            <span class="text-white fw-bold" style="font-size: 0.875rem;">
                                                @student.Name[0]@student.Surname[0]
                                            </span>
                                        </div>
                                        <div>
                                            <h6 class="mb-0" style="color: #1e3a8a; font-weight: 600;">
                                                @student.Name @student.Surname
                                            </h6>
                                            <small class="text-muted">ID: @student.Id.Substring(0, 8)...</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-muted" style="font-size: 0.875rem;">
                                        <i class="fas fa-envelope me-1 text-primary"></i>
                                        @student.Email
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted" style="font-size: 0.875rem;">
                                        <i class="fas fa-calendar me-1 text-primary"></i>
                                        @student.CreatedAt.ToString("MMM dd, yyyy")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(student.Status == "Active" ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger")
                                                  px-3 py-2" style="border: 1px solid transparent; font-size: 0.75rem; font-weight: 600;">
                                        <i class="fas @(student.Status == "Active" ? "fa-check-circle" : "fa-times-circle") me-1"></i>
                                        @student.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="fw-bold me-2" style="color: #1e3a8a;">@student.EnrolledCoursesCount</span>
                                        <small class="text-muted">courses</small>
                                    </div>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "StudentProgress", new { id = student.Id })"
                                           class="btn btn-sm btn-outline-primary border-2 me-2"
                                           style="font-weight: 500; padding: 6px 12px;"
                                           title="View Progress">
                                            <i class="fas fa-chart-line me-1"></i>Progress
                                        </a>

                                        @if (student.Status == "Deleted")
                                        {
                                            <form asp-action="Restore" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@student.Id" />
                                                <button type="submit" class="btn btn-sm btn-success border-2"
                                                        style="font-weight: 500; padding: 6px 12px;"
                                                        onclick="return confirm('Are you sure you want to restore this student?')"
                                                        title="Restore Student">
                                                    <i class="fas fa-undo me-1"></i>Restore
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Delete", new { id = student.Id })"
                                               class="btn btn-sm btn-outline-danger border-2"
                                               style="font-weight: 500; padding: 6px 12px;"
                                               title="Delete Student">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Empty State -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-users fa-4x text-muted opacity-25"></i>
                    </div>
                    <h5 class="text-muted mb-2">No Students Found</h5>
                    <p class="text-muted mb-4">
                        @(string.IsNullOrEmpty(ViewBag.SearchTerm) ?
                                            "Get started by adding your first student." :
                                            "No students match your search criteria.")
                </p>
                @if (string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <a href="@Url.Action("Create")" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>Add First Student
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                            <i class="fas fa-times me-2"></i>Clear Search
                        </a>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Additional Info Section -->

</div>

<style>
    .card {
        border-radius: 12px;
    }

    .table th {
        border-top: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.75rem;
    }

    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }

    .btn {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .avatar-sm {
        box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);
    }

    .badge {
        border-radius: 6px;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }

    .input-group-text {
        border-radius: 8px 0 0 8px;
    }

    .form-control {
        border-radius: 0;
    }

    .table-hover tbody tr:hover {
        background-color: #f8fafc;
        transform: translateY(-1px);
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    /* Ensure proper border radius for input group buttons */
    .input-group > .btn:not(:last-child) {
        border-radius: 0;
    }

    .input-group > .btn:last-child {
        border-radius: 0 8px 8px 0;
    }
</style>