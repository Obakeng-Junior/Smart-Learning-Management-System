@using AI_Powered_Learning_Application.Models.ViewModels
@model StudentViewModel

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h3 mb-2" style="color: #1e3a8a; font-weight: 600;">Delete Student</h1>
            <p class="mb-0" style="color: #6b7280;">Remove student from active list</p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning border-0 mb-4">
                        <div class="d-flex">
                            <i class="fas fa-info-circle me-2 mt-1 text-warning"></i>
                            <div>
                                <h6 class="alert-heading mb-2">This is a soft delete</h6>
                                <p class="mb-0 small">The student will be marked as deleted and hidden from the main list, but all their data and progress will be preserved.</p>
                            </div>
                        </div>
                    </div>

                    <h5 class="text-center mb-4">Are you sure you want to delete this student?</h5>

                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4 fw-semibold">Name:</div>
                                <div class="col-sm-8">@Model.Name @Model.Surname</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4 fw-semibold">Email:</div>
                                <div class="col-sm-8">@Model.Email</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4 fw-semibold">Joined Date:</div>
                                <div class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4 fw-semibold">Enrolled Courses:</div>
                                <div class="col-sm-8">
                                    <span class="badge bg-primary">@Model.EnrolledCoursesCount</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Details", "StudentProgress", new { id = Model.Id })" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white py-3">
                    <h6 class="card-title mb-0 text-muted">
                        <i class="fas fa-lightbulb me-2"></i>What happens next?
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="small text-muted mb-0">
                        <li class="mb-1">Student will be moved to "Deleted" status</li>
                        <li class="mb-1">They will not appear in the main student list</li>
                        <li class="mb-1">All their progress and data will be preserved</li>
                        <li class="mb-1">You can restore them at any time from the student list</li>
                        <li>This action can be reversed</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .border-danger {
        border: 2px solid #dc3545 !important;
    }
</style>